<Page
    x:Class="LiveCaptionsTranscriber.CaptionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LiveCaptionsTranscriber"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="CaptionPage"
    JournalEntry.KeepAlive="True"
    mc:Ignorable="d">

    <Grid Margin="5,5,15,5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.Resources>
            <Style x:Key="CaptionBlockStyle" TargetType="TextBlock">
                <Setter Property="TextWrapping" Value="Wrap" />
                <Setter Property="VerticalAlignment" Value="Stretch" />
            </Style>
        </Grid.Resources>

        <!-- Current Sentence -->
        <ui:Card
            Grid.Row="0"
            Padding="8"
            VerticalAlignment="Stretch">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    x:Name="CurrentSentence"
                    Grid.Column="0"
                    Background="Transparent"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Style="{StaticResource CaptionBlockStyle}"
                    Text="{Binding DisplayOriginalCaption, UpdateSourceTrigger=PropertyChanged}"
                    Foreground="DodgerBlue" />
                <TextBlock
                    Grid.Column="1"
                    Text="Current"
                    FontSize="12"
                    Foreground="Gray"
                    VerticalAlignment="Top"
                    Margin="10,0,0,0" />
            </Grid>
        </ui:Card>

        <!-- Control Buttons -->
        <ui:Card
            Grid.Row="1"
            Margin="0,5,0,0"
            Padding="8">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <ui:Button
                    x:Name="CopyButton"
                    Content="Copy All"
                    Margin="0,0,10,0"
                    Padding="15,8"
                    Click="CopyButton_Click"
                    Icon="{ui:SymbolIcon Copy16}" />
                <ui:Button
                    x:Name="ClearButton"
                    Content="Clear"
                    Padding="15,8"
                    Click="ClearButton_Click"
                    Icon="{ui:SymbolIcon Delete16}"
                    Appearance="Secondary" />
            </StackPanel>
        </ui:Card>

        <!-- Full Transcription -->
        <ui:Card
            Grid.Row="2"
            Margin="0,5,0,0"
            Padding="8">
            <ScrollViewer
                x:Name="TranscriptionScrollViewer"
                VerticalScrollBarVisibility="Auto"
                HorizontalScrollBarVisibility="Disabled">
                <TextBlock
                    x:Name="FullTranscription"
                    Background="Transparent"
                    FontSize="14"
                    LineHeight="22"
                    Style="{StaticResource CaptionBlockStyle}"
                    Text="{Binding FullTranscriptionText, UpdateSourceTrigger=PropertyChanged}"
                    Cursor="Hand"
                    MouseLeftButtonDown="TextBlock_MouseLeftButtonDown"
                    ToolTip="Click to Copy"
                    MinHeight="100" />
            </ScrollViewer>
        </ui:Card>

    </Grid>
</Page>
